{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended" // Or use `plugin:vue/essential` for basic rules
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // Customize your rules here
    "vue/html-indent": ["error", 2],
    "vue/max-attributes-per-line": ["error", { "singleline": 1 }]
  }
}
